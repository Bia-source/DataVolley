// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Athlete {
  id_athlete          String     @id @default(uuid())
  name                String
  number              Int
  height              Int
  age                 Int
  position            POSITION
  team                String
  id_category_athlete String?
  categories          Category[]
  Squads              Squads[]

  @@map("athletes")
}

model Category {
  id_category    String     @id @default(uuid())
  classification CATEGORIES
  id_team        String
  genre          GENRE
  id_athletes    String[]
  athletes       Athlete[]

  @@map("category")
}

model Squads {
  id_squad       String     @id @default(uuid())
  classification CATEGORIES
  id_team        String
  genre          String
  athletes       Athlete[]
}

enum POSITION {
  LEVANTADOR
  PONTEIRO
  OPOSTO
  LIBERO
  CENTRAL
}

enum CATEGORIES {
  SUB_15
  SUB_17
  SUB_19
  SUB_21
  ADULTO
}

enum GENRE {
  FEM
  MASC
}
